{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm ci",
  "framework": null,
  "devCommand": "npm run dev",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/socket.io/(.*)",
      "destination": "/api/socket"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "VITE_APP_ENV": "production",
    "VITE_SERVER_URL": "https://meetingapp-git-main-angelseafarerswebsite.vercel.app",
    "VITE_APP_NAME": "MeetTime",
    "CORS_ORIGINS": "https://meetingapp-git-main-angelseafarerswebsite.vercel.app,https://www.meetingapp.org,https://meetingapp-puce.vercel.app",
    "RATE_LIMIT_WINDOW_MS": "900000",
    "RATE_LIMIT_MAX_REQUESTS": "100",
    "MAX_PARTICIPANTS_PER_MEETING": "50",
    "MEETING_EXPIRY_HOURS": "24",
    "TOKEN_EXPIRY_HOURS": "1",
    "LOG_LEVEL": "info"
  },
  "regions": ["fra1"],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}